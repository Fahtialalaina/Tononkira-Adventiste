{% extends 'base.html.twig' %}

{% block title %}Chant index{% endblock %}

{% block body %}
    <h1>Chant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Parole</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chant in chants %}
            <tr>
                <td>{{ chant.id }}</td>
                <td>{{ chant.Titre }}</td>
                <td>{{ chant.Parole }}</td>
                <td>
                    <a href="{{ path('chant_show', {'id': chant.id}) }}">show</a>
                    <a href="{{ path('chant_edit', {'id': chant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chant_new') }}">Create new</a>
{% endblock %}
